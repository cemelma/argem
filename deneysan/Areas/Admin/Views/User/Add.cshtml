@model deneysan_DAL.Entities.User
@{
    ViewBag.Title = "Add";
    Layout = "~/Areas/Admin/Views/Shared/adminlayout.cshtml";
}

<link href="~/Areas/Admin/Content/styles/pluginstyles/jquery.msgbox.css" rel="stylesheet" />
<link href="~/Areas/Admin/Content/styles/forms.css" rel="stylesheet" />
<link href="~/Areas/Admin/Content/styles/table.css" rel="stylesheet" />

@Html.Partial("link_leftbar")

<div id="page-content" class="container_12">
    <div id="page-header">
       <h2>YENİ ÜYELİK</h2>
    </div> 
    
<section class="grid_12 form">
    @Html.Hidden("ProcessMessage",(object)@ViewBag.ProcessMessage) 
    @using(Html.BeginForm("Add", "User"))
    {
        @Html.ValidationSummary(true)
        <fieldset>
        <legend>Yeni Üye Ekle</legend>
       
        <p>
            @Html.LabelFor(m=>m.FullName)
            @Html.TextBoxFor(m=>m.FullName, new { @class="textwidth50"})
        </p>
        
        <p>
            @Html.LabelFor(m=>m.Email)
            @Html.TextBoxFor(m=>m.Email, new { @class="textwidth50",Rows="5"})
            @Html.ValidationMessageFor(m => m.Email)
        </p>
            <p>
                @Html.LabelFor(m => m.Password)
                @Html.TextBoxFor(m => m.Password, new { @class = "textwidth50", Rows = "5", type="password" })
                @Html.ValidationMessageFor(m => m.Password)
            </p>
          
            <p>
                @Html.LabelFor(m => m.Institution)
                @Html.TextAreaFor(m => m.Institution, new { @class = "textwidth50", Rows = "5" })
                @Html.ValidationMessageFor(m => m.Institution)
            </p>

            <p>
                @Html.LabelFor(m => m.Contact)
                @Html.TextAreaFor(m => m.Contact, new { @class = "textwidth50", Rows = "5" })
                @Html.ValidationMessageFor(m => m.Contact)
            </p>

        <br />
        <p>
            <label></label>
            <input type="submit" value="Kaydet" id="btnsave" />
       </p>
    </fieldset>


    }
</section>
</div>
@section Scripts {
<link href="~/Areas/Admin/Content/styles/pluginstyles/jquery.msgbox.css" rel="stylesheet" />
<script src="~/Areas/Admin/Content/scripts/plugins/jquery.msgbox.min.js"></script>
<script src="~/Areas/Admin/Content/scripts/myscripts/MessageBox.js"></script>
<script src="~/Areas/Admin/Content/scripts/plugins/jquery.validate.js"></script>
<script src="~/Areas/Admin/Content/scripts/plugins/jquery.validate.unobtrusive.js"></script>


    <script src="~/Areas/Admin/Content/scripts/plugins/jquery.ui.datepicker-tr.js"></script>
<script src="~/Areas/Admin/Content/scripts/pagescripts/documents/adddocument.js"></script>
}

