@model deneysan.Models.NewRegister
@{
    ViewBag.Title = "Yeni Üyelik";
    Layout = "~/Views/Shared/frontlayout.cshtml";
}

<div class="about-intro-wrap pull-left">
    <div class="breadcrumbcustom">
        <div class="container">
            <!--Title / Beadcrumb-->
            <div class="inner-page-title-wrap col-xs-12 col-md-12 col-sm-12">
                <div class="bread-heading"><h1>@AccountRess.AccountStrings.yeniuyeliktext</h1></div>
                <div class="bread-crumb pull-right">
                    <ul>
                        <li><a href="/@SharedRess.SharedStrings.menu_culture/@SharedRess.SharedStrings.menu_homepage">@SharedRess.SharedStrings.homepage</a></li>
                        <li><a href="/@SharedRess.SharedStrings.menu_culture/@SharedRess.SharedStrings.menu_newrecord">@SharedRess.SharedStrings.newrecord</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <div class="container">
        <div class="row">
            <div class="col-md-12 col-sm-12 col-lg-12 col-xs-12 dept-tabs-wrap wow fadeInUp animated" data-wow-delay="1s" data-wow-offset="200">
                <div class="tabbable tabs-left">
                    <div class="alert alert-info">
                        <strong>@AccountRess.AccountStrings.uyelikinfo</strong>
                    </div>
                        <div class="tab-content col-md-6 col-sm-6 col-xs-6 col-centered" style="min-height:450px;float: none;display: block;margin-left: auto;margin-right: auto;">
                            <div class="dept-title-tabs">@AccountRess.AccountStrings.yeniuyeliktext</div>
                            <br />
                           
                            @using (Html.BeginForm("NewRecord", "FAccount", FormMethod.Post, new { }))
                            {
                                <div class="form-horizontal">
                                    <div class="submit form-group" style="font-size: 16px;color: red;font-weight: bold;">
                                        @ViewBag.process
                                    </div>
                                    <div style="font-weight:bold; font-size:16px; color:red">
                                        @Html.ValidationSummary(true)
                                    </div>
                                    <br />

                                    <div class="form-group">
                                        <div class="email controls">
                                            @Html.TextBoxFor(model => model.FullaName, new { @placeholder = AccountRess.AccountStrings.fullname, @class = "form-control" })
                                            @Html.ValidationMessageFor(d => d.FullaName)
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <div class="email controls">
                                            @Html.TextBoxFor(model => model.Email, new { @placeholder = AccountRess.AccountStrings.mail, @class = "form-control" })
                                            @Html.ValidationMessageFor(d => d.Email)
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <div class="email controls">
                                            @Html.TextBoxFor(model => model.Password, new { @placeholder = AccountRess.AccountStrings.sifre, @class = "form-control" })
                                            @Html.ValidationMessageFor(d => d.Password)
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <div class="email controls">
                                            @Html.TextAreaFor(model => model.Institution, new { @placeholder = AccountRess.AccountStrings.institution, @class = "form-control" })
                                            @Html.ValidationMessageFor(d => d.Institution)
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <div class="email controls">
                                            @Html.TextAreaFor(model => model.Contact,new { @placeholder = AccountRess.AccountStrings.contact, @class = "form-control" })
                                            @Html.ValidationMessageFor(d => d.Contact)
                                        </div>
                                    </div>

                                    <div class="submit form-group">
                                        <input type="submit" value='@AccountRess.AccountStrings.kaydet' class="btn btn-primary">
                                        &nbsp;&nbsp;&nbsp; <a href="@AccountRess.AccountStrings.sifremiunuttumlink">@AccountRess.AccountStrings.sifremiunuttumtext</a>,&nbsp;&nbsp;
                                        &nbsp;&nbsp;&nbsp;<a href="@SharedRess.SharedStrings.menu_login">@SharedRess.SharedStrings.login</a>
                                    </div>
                                    
                                    <div class="submit form-group" style="margin-bottom:8px">
                                        
                                    </div>

                                </div>
                            }

                        </div>
                    </div>
            </div>
        </div>
    </div>
</div>