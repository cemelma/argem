@model IEnumerable<deneysan_DAL.Entities.BankInfo>
@{
    Layout = "~/Views/Shared/frontlayout.cshtml";
}

                      <div class="about-intro-wrap pull-left">
                          <div class="bread-crumb-wrap ibc-wrap-2">
                              <div class="container">
                                  <!--Title / Beadcrumb-->
                                  <div class="inner-page-title-wrap col-xs-12 col-md-12 col-sm-12">
                                      <div class="bread-heading"><h1>@SharedRess.SharedStrings.bankaccounts</h1></div>
                                      <div class="bread-crumb pull-right">
                                          <ul>
                                              <li><a href="/@SharedRess.SharedStrings.menu_culture/@SharedRess.SharedStrings.menu_homepage">@SharedRess.SharedStrings.homepage</a></li>
                                              <li><a href="/@SharedRess.SharedStrings.menu_culture/@SharedRess.SharedStrings.menu_bankaccounts">@SharedRess.SharedStrings.bankaccounts</a></li>
                                          </ul>
                                      </div>
                                  </div>
                              </div>
                          </div>

                          <div class="container">

                              <div class="row">
                                  

                                  <div class="col-xs-12 col-sm-12 col-md-12 pull-left doctors-3col-tabs gallery-3col-tabs">
                                      <div class="full-content-title" style="float: left;line-height: 1.5em;color: #414042;font-size: 30px;text-align: center;padding-bottom: 40px; width:100%">@ContactRess.ContactStrings.bankaccounts</div>
                                      <div class="content-tabs col-xs-12 col-sm-12">

                                          <!-- Tab panes -->
                                          <div class="tab-content">

                                              <div class="tab-pane fade fade-slow in active" id="all-doc" style="margin-bottom:280px;">

                                                  @foreach (var bank in Model)
                                                  {
                                                      <div class="doctor-box col-md-4 col-sm-6 col-xs-12 wow fadeInUp animated" data-wow-delay="0.5s" data-wow-offset="200">

                                                          <div class="zoom-wrap">
                                                              <img class="img-responsive" src="@bank.Logo" style="border:1px solid #e6e7e8" />
                                                          </div>
                                                          <div class="doc-name">
                                                              <div class="doc-name-class">@bank.BankName</div>
                                                              <span class="doc-title">@bank.BankNumber</span>
                                                              <hr />
                                                              <p>@bank.IBAN</p>
                                                          </div>
                                                      </div>
                                                  }
                                              </div>

                                          </div>

                                      </div> <!--Mid Services End-->

                                  </div>

                              </div>
                          </div>
                      </div>