@{
    ViewBag.Title = "NewsContent";
    Layout = "~/Views/Shared/frontlayout.cshtml";
}
@model deneysan_DAL.Entities.News
<div class="about-intro-wrap pull-left">
    <div class="bread-crumb-wrap ibc-wrap-6">
        <div class="container">
            <!--Title / Beadcrumb-->
            <div class="inner-page-title-wrap col-xs-12 col-md-12 col-sm-12">
                <div class="bread-heading"><h1>@NewsRess.NewsStrings.deneysannews</h1></div>
                <div class="bread-crumb pull-right">
                    <ul>
                        <li><a href="/@SharedRess.SharedStrings.menu_culture/@SharedRess.SharedStrings.menu_homepage">@SharedRess.SharedStrings.homepage</a></li>
                        <li><a href="/@SharedRess.SharedStrings.menu_culture/@SharedRess.SharedStrings.menu_allnews">@HomeRess.HomeStrings.allnews</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <div class="container">
        <div class="row">
            <div class="col-md-12 col-sm-12 col-lg-12 col-xs-12 dept-tabs-wrap wow fadeInUp animated" data-wow-delay="1s" data-wow-offset="200">
                <div class="tabbable ">
                    <div class="tab-content col-md-12 col-sm-12 col-xs-12 pull-right" style="min-height:450px">
                        <div class="dept-title-tabs">@Model.Header</div>
                        <br />
                        <div class="clearfix">
                            <div class="pull-left">
                                <img src="@Model.NewsImage" class="img-responsive post-author-img" alt="@Model.Header" style="width:250px;" />
                            </div>
                            <div class="pull-right" style="width:75%;">
                                @Html.Raw(Model.Content)
                            </div>
                        </div>
                       
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


