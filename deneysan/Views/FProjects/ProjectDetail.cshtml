@{
    ViewBag.Title = "ProjectDetail";
    Layout = "~/Views/Shared/frontlayout.cshtml";
}

@model deneysan.Controllers.FProjectsController.ProjectDetailModel

@if (Model.Project != null)
{

    <div class="about-intro-wrap pull-left">
        <div class="bread-crumb-wrap ibc-wrap-6">
            <div class="container">
                <!--Title / Beadcrumb-->
                <div class="inner-page-title-wrap col-xs-12 col-md-12 col-sm-12">
                    <div class="bread-heading"><h1>@Model.Project.ProjeAdi</h1></div>

                </div>
            </div>
        </div>

        <div class="container">
            <div class="tab-content col-md-12 col-sm-12 col-xs-12 pull-right" style="min-height:450px" id="projectform">
                <fieldset>
                    <legend>
                        @ProjectsRess.ProjectsStrings.projedetay
                    </legend>

                    <div class="row">
                        <div class="col-lg-3"><label>@ProjectsRess.ProjectsStrings.hedef</label></div>
                        <div class="col-lg-5">@Html.TextBoxFor(x => x.Project.ProjeHedefi, "", new { @class = "contact2-textbox", @placeholder = @ProjectsRess.ProjectsStrings.hedef.ToLower(), @readonly = "true" })</div>

                    </div>
                    <div class="row">
                        <div class="col-lg-3"><label>@ProjectsRess.ProjectsStrings.amac</label></div>
                        <div class="col-lg-5">@Html.TextBoxFor(x => x.Project.ProjeAmac, "", new { @class = "contact2-textbox", @placeholder = @ProjectsRess.ProjectsStrings.amac.ToLower(), @readonly = "true" })</div>

                    </div>

                    <div class="row">
                        <div class="col-lg-3"><label>@ProjectsRess.ProjectsStrings.sure</label></div>
                        <div class="col-lg-5">@Html.TextBoxFor(x => x.Project.ProjeSuresi, "", new { @class = "contact2-textbox", @placeholder = @ProjectsRess.ProjectsStrings.sure.ToLower(), @readonly = "true" })</div>

                    </div>

                    <div class="row">
                        <div class="col-lg-3"><label>@ProjectsRess.ProjectsStrings.butce</label></div>
                        <div class="col-lg-5">@Html.TextBoxFor(x => x.Project.ProjeButcesi, "", new { @class = "contact2-textbox", @placeholder = @ProjectsRess.ProjectsStrings.butce.ToLower(), @readonly = "true" })</div>

                    </div>

                    <div class="row">
                        <div class="col-lg-3"><label>@ProjectsRess.ProjectsStrings.finanseeden</label></div>
                        <div class="col-lg-5">@Html.TextBoxFor(x => x.Project.FinanseEdenKurum, "", new { @class = "contact2-textbox", @placeholder = @ProjectsRess.ProjectsStrings.finanseeden.ToLower(), @readonly = "true" })</div>

                    </div>

                    <div class="row">
                        <div class="col-lg-3"><label>@ProjectsRess.ProjectsStrings.uygulanacagiyer</label></div>
                        <div class="col-lg-5">@Html.TextBoxFor(x => x.Project.UygulanacagiYer, "", new { @class = "contact2-textbox", @placeholder = @ProjectsRess.ProjectsStrings.uygulanacagiyer.ToLower(), @readonly = "true" })</div>

                    </div>
                    <div class="row">
                        <div class="col-lg-3"><label>@ProjectsRess.ProjectsStrings.sonuclar</label></div>
                        <div class="col-lg-5">@Html.TextAreaFor(x => x.Project.BeklenenSonuclar, new { @class = "contact2-textbox", @placeholder = @ProjectsRess.ProjectsStrings.sonuclar.ToLower(), @readonly = "true" })</div>

                    </div>
                    <div class="row">
                        <div class="col-lg-3"><label>@ProjectsRess.ProjectsStrings.ozet</label></div>
                        <div class="col-lg-5">@Html.TextAreaFor(x => x.Project.ProjeOzeti, new { @class = "contact2-textbox", @placeholder = @ProjectsRess.ProjectsStrings.ozet.ToLower(), @readonly = "true" })</div>

                    </div>
                    <div class="row">
                        <div class="col-lg-3"><label>@ProjectsRess.ProjectsStrings.dokuman</label></div>
                        <div class="col-lg-5">
                            @if (!string.IsNullOrEmpty(Model.Project.ProjeDokümani))
                            {
                                <div class="purchase-strip-blue dept-apponit-butt" style="margin-top:0px;">
                                    <section class="color-4">
                                        <p class="ipurchase-paragraph">
                                            <a class="fa-calendar fa-eye btn btn-4 btn-4a notViewed" target="_blank" href="../Projects/DownloadFile/@Model.Project.ProjeDokümani">@ProjectsRess.ProjectsStrings.download</a>
                                        </p>
                                    </section>
                                </div>
                            }
                            else
                            {
                                <label>@ProjectsRess.ProjectsStrings.projedokumaniyok</label>
                            }


                        </div>

                    </div>


                    @*<div class="row">
                            <div class="col-lg-3"><label>@ProjectsRess.ProjectsStrings.resim</label></div>
                            <div class="col-lg-5">

                                <input type="file" class="multi" maxlength="2" id="fileinput_projeresim" />
                            </div>
                            <div class="col-lg-4"></div>
                        </div>*@

                </fieldset>

                <fieldset style="margin-top:20px;">
                    <legend>
                        @ProjectsRess.ProjectsStrings.projesahibibaslik
                    </legend>
                    <div class="row">
                        <div class="col-lg-3"><label>@ProjectsRess.ProjectsStrings.projesahibiadi</label></div>
                        <div class="col-lg-5">@Html.TextBoxFor(x =>x.Project.ProjeSahibi, "", new { @class = "contact2-textbox", @placeholder = @ProjectsRess.ProjectsStrings.projesahibiadi.ToLower(),@readonly="true" })</div>

                    </div>
                    <div class="row">
                        <div class="col-lg-3"><label>@ProjectsRess.ProjectsStrings.projesahibikurum</label></div>
                        <div class="col-lg-5">@Html.TextBoxFor(x => x.Project.ProjeSahibiKurumu, "", new { @class = "contact2-textbox", @placeholder = @ProjectsRess.ProjectsStrings.projesahibikurum.ToLower(), @readonly = "true" })</div>

                    </div>
                    <div class="row">
                        <div class="col-lg-3"><label>@ProjectsRess.ProjectsStrings.telefonno</label></div>
                        <div class="col-lg-5">@Html.TextBoxFor(x => x.Project.Telefon, "", new { @class = "contact2-textbox", @placeholder = @ProjectsRess.ProjectsStrings.telefonno.ToLower(), @readonly = "true" })</div>

                    </div>

                    <div class="row">
                        <div class="col-lg-3"><label>@ProjectsRess.ProjectsStrings.faksno</label></div>
                        <div class="col-lg-5">@Html.TextBoxFor(x => x.Project.Faks, "", new { @class = "contact2-textbox", @placeholder = @ProjectsRess.ProjectsStrings.faksno.ToLower(), @readonly = "true" })</div>

                    </div>

                    <div class="row">
                        <div class="col-lg-3"><label>@ProjectsRess.ProjectsStrings.postaadresi</label></div>
                        <div class="col-lg-5">@Html.TextAreaFor(x => x.Project.PostaAdresi, new { @class = "contact2-textbox", @placeholder = @ProjectsRess.ProjectsStrings.postaadresi.ToLower(), @readonly = "true" })</div>

                    </div>

                    <div class="row">
                        <div class="col-lg-3"><label>@ProjectsRess.ProjectsStrings.eposta</label></div>
                        <div class="col-lg-5">@Html.TextBoxFor(x => x.Project.Email, "", new { @class = "contact2-textbox", @placeholder = @ProjectsRess.ProjectsStrings.eposta.ToLower(), @readonly = "true" })</div>

                    </div>


                </fieldset>


            </div>
        </div>
    </div>
}