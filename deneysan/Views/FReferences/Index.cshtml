@model IEnumerable<deneysan_DAL.Entities.References>
@{
    Layout = "~/Views/Shared/frontlayout.cshtml";
    ViewBag.Title = "Referanslar";
}
                      <style>
                          .refdiv:hover {
                              background-color: #fafafa;
                          }

                          .refdiv {
                              display: block;
                              float: left;
                              border: 1px solid #efefef;
                              padding: 5px;
                              height: 140px;
                              width: 160px;
                              margin: 0 16px 15px 0;
                          }
                      </style>
<div class="about-intro-wrap pull-left">
    <div class="breadcrumbcustom">
        <div class="container">
            <!--Title / Beadcrumb-->
            <div class="inner-page-title-wrap col-xs-12 col-md-12 col-sm-12">
                <div class="bread-heading"><h1>@ReferencesRess.ReferencesStrings.references</h1></div>
                <div class="bread-crumb pull-right">
                    <ul>
                        <li><a href="/@SharedRess.SharedStrings.menu_culture/@SharedRess.SharedStrings.menu_homepage">@SharedRess.SharedStrings.homepage</a></li>
                        <li><a href="/@SharedRess.SharedStrings.menu_culture/@SharedRess.SharedStrings.menu_references">@SharedRess.SharedStrings.references</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <div class="container">
        <div class="row">
            <div class="col-md-12 col-sm-12 col-lg-12 col-xs-12 dept-tabs-wrap wow fadeInUp animated" data-wow-delay="1s" data-wow-offset="200">
                <div class="tabbable tabs-left">
                    <div class="tab-content col-md-12 col-sm-12 col-xs-12 pull-right" style="min-height:450px">
                        <div class="dept-title-tabs">@ReferencesRess.ReferencesStrings.references</div>
                        <br />
                        <div id="reflist">
                            @foreach (var reference in Model)
                            {
                                <a href="@reference.Link" target="_blank">
                                    <div class="refdiv">
                                        <div style="height:100px; text-align:center;">
                                            <img width="96" height="96" src="@reference.Logo" alt="@reference.ReferenceName" />
                                        </div>
                                        <div style="text-align:center;font-size: 12px;">
                                            @reference.ReferenceName
                                        </div>
                                    </div>
                                </a>
                            }
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
